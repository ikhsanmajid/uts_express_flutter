generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model barang {
  nobarcode String @id @unique
  nama      String
  harga     Int
  stok      Int

  barcodepenjualan penjualan[] @relation("noBarcodeFK") 
}

model supplier {
  id_sup  Int    @id @default(autoincrement()) // Primary key with auto-increment
  nama    String
  alamat  String
  no_hp   String
}

model penjualan {
  id Int @id @default(autoincrement())
  nonota Int @unique
  nobarcode String 
  jumlah Int

  noBarcodeFK barang @relation("noBarcodeFK", fields: [nobarcode], references: [nobarcode])
}